{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "esnext",
    ],
    "outDir": "transpile",
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "es2019",
    "baseUrl": ".",
    "allowJs": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "declaration": true,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "typeRoots": ["node_modules/@types"],
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
  ]
}